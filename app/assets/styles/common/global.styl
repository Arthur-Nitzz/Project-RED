body
	font-size: 22px
	line-height: 1.4
	font-family: Courier New, Courier, monospace
	background-color: colors.black
	color: colors.white
	overflow-x: hidden
	animation: turn-on 2s linear

	+max(xs)
		line-height: 1.6
		font-size: 18px

h2
	font-size: 22px
	margin-bottom: 5px
	margin-top: 55px

p
	margin-bottom: 25px
	+max(xs)
		margin-bottom: 15px

ul
	margin-bottom: 25px

	li
		margin-bottom: 5px
		+max(xs)
			margin-bottom: 25px

small
	font-size: 16px

.page-content
	max-width: 1020px
	padding: 50px
	opacity: 0
	animation: glitch 1s linear infinite, flicker .3s infinite
	text-shadow: 0em 0em 2em colors.neonGreen,
								0em 0em 1em colors.neonGreen,
								1px 1px 5px colors.neonGreen
	+max(xs)
		padding: 50px 25px
	a
		display: inline
		position: relative
		word-wrap: break-word

		+max(xs)
			color: colors.black
			background-color: colors.white

			&:hover
				background-size: 100% 100%

		+min(sm)
			display: inline-block
			&::before
			&::after
				content: ''
				display: block
				position: absolute
				bottom: 0
				left: 0
				size: 100% 2px
				background-color: colors.white
				transition: height .3s ease
				z-index: layers.underlineStatic

			&::after
				z-index: layers.underline
				background-image: url(../images/rainbow-static.gif)
				background-position: center
				opacity: .4

		&:hover
			color: colors.black

			&::before
				z-index: layers.underline
				height: 100%

			&::after
				z-index: layers.underlineStatic
				height: 100%

		&[href*='last.fm']
			color: inherit
			+max(xs)
				background-color: colors.lastfmRed
			&::before
				background-color: colors.lastfmRed
			&::after
				opacity: .2

		&[href*='linkedin']
			color: inherit
			+max(xs)
				background-color: colors.linkedinBlue
			&::before
				background-color: colors.linkedinBlue
			&::after
				opacity: .2

		&[href*='instagram.com']
			color: inherit
			+max(xs)
				background-color: transparent
				background-image: radial-gradient(circle at 33% 100%, #FED373 4%, #F15245 30%, #D92E7F 62%, #9B36B7 85%, #515ECF)
			&::before
				background-image: radial-gradient(circle at 33% 100%, #FED373 4%, #F15245 30%, #D92E7F 62%, #9B36B7 85%, #515ECF)
			&:hover
				color: colors.white
			&::after
				opacity: .2

.page-background
	position: fixed
	top: 0
	left: 0
	size: 100%
	z-index: layers.siteBackground
	background-image: url(../images/static.gif)
	background-size: cover
	opacity: .05

	&::before
		content: ''
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 50px
		background: linear-gradient(to bottom, rgba(255,0,0,0) 0%,rgba(255,250,250,1) 50%,rgba(255,255,255,0.98) 51%,rgba(255,0,0,0) 100%)
		opacity: .8
		animation: vline 8s linear infinite
		will-change: top

@keyframes vline
	0%
		top: 0px
	100%
		top: 100%

@keyframes flicker
	0%
		opacity: .95
	25%
		opacity: .9
	50%
		opacity: 1
	100%
		opacity: .85

@keyframes glitch
	0%
		transform: scale(1, 1.002)
	50%
		transform: scale(1, 1.0001)
	100%
		transform: scale(1.001, 1)

@keyframes turn-on
	0%
		transform: scale(1,0.8) translate3d(0,0,0)
		filter: brightness(30)
		opacity: 1

	3.5%
		transform: scale(1,0.8) translate3d(0,100%,0)


	3.6%
		transform: scale(1,0.8) translate3d(0,-100%,0)
		opacity: 1


	14%
		transform: scale(1.3,0.6) translate3d(0,100%,0)
		filter: brightness(30)
		opacity: 0

	25%
		transform: scale(1,1) translate3d(0,0,0)
		filter: contrast(0) brightness(0)
		opacity: 0

	100%
		transform: scale(1,1) translate3d(0,0,0)
		filter: contrast(1) brightness(1.2) saturate(1.3)
		opacity: 1
