.page-content
  max-width: 900px
  position: relative
  z-index: layers.content
  padding: 50px 0 50px
  opacity: 0
  animation: glitch 1s linear infinite, flicker .3s infinite
  will-change: transform, opacity, text-shadow
  text-shadow: 0 0 2em ((colors.neonGreen)), 0 0 1em ((colors.neonGreen)), 1px 1px 5px ((colors.neonGreen))

  +below(xs)
    padding: 50px 25px

.page-background
  position: fixed
  top: 0
  left: 0
  size: 100%
  z-index: layers.siteBackground
  background-image: url(../images/static.gif)
  background-size: cover
  opacity: .05
  pointer-events: none

  &::before
    content: ''
    position: absolute
    top: 0
    left: 0
    size: 100% 50px
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0, rgba(255, 250, 250, 1) 50%, rgba(255, 255, 255, .98) 51%, rgba(0, 0, 0, 0) 100%)
    opacity: .8
    animation: vline 8s linear infinite
    will-change: top
