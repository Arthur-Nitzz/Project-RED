{
  "project": {
    "repo": "git@github.com:kaisermann/kaisermann.me.git",
    "type": "html",
    "fileStructure": {
      "toUpload": [
        [
          "./build",
          "./"
        ]
      ],
      "shared": [
        [
          "robots.txt"
        ]
      ]
    },
    "cmds": {
      "install": [
        [
          "",
          "yarn"
        ]
      ],
      "afterDeploy": [
        [
          "",
          "rm -rf fabfile.py arke.json .arke readme.md .editorconfig"
        ],
        [
          "",
          "shopt -s dotglob; mv build/* .; rm -rf build; shopt -u dotglob"
        ]
      ]
    },
    "maxReleases": 5
  },
  "hosts": {
    "staging": {
      "hosts": [
        "bottura"
      ],
      "name": "kaisermann.me",
      "projectDir": "/var/www",
      "projectPublicDir": "htdocs",
      "webRootDir": "",
      "hostnames": "kaisermann.me www.kaisermann.me",
      "webServerUser": "www-data",
      "webServerGroup": "www-data",
      "services": {
        "toRestart": [
          "php7.0-fpm"
        ],
        "toReload": [
          "nginx"
        ]
      }
    }
  }
}
