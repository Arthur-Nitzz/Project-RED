<!DOCTYPE html>
<html lang="en">
  {% include "head.njk" %}
  <body class="cursor-default" no-js>
    <a class="skip-link" href="#content">Skip to content</a>

    <div class="tv glitchy-text">
      <div class="tv-screen js-screen" tv-animation="turn-on">
        <div class="tv-effects">
          <div class="tv-effect--decontrast"></div>
          <div class="tv-effect--colors"></div>
          <div class="tv-effect--static"></div>
          <div class="tv-effect--vignette"></div>
          <div class="tv-effect--crt"></div>
        </div>
        <div class="tv__content">
          <div class="page__container">
            {% include 'header.njk' %}

            <div class="page__content" id="content">
              {{ content | safe }}
            </div>

            {% include 'footer.njk' %}
          </div>
        </div>
      </div>
    </div>

    <div class="js-remote"></div>

    <script>
      {% set footerJs %}
        document
          .querySelector('.js-header-date')
          .innerHTML = new Intl
          .DateTimeFormat('en-US', {
            month: 'short',
            day: 'numeric',
            year: 'numeric'
          })
          .format(new Date())
      {% endset %}

        {{ footerJs | jsmin | safe  }}
    </script>
  </body>
</html>
