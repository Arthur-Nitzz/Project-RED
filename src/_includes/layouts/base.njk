<!doctype html>
<html lang="en">
  {% include "head.njk" %}
  <body>
    <div class="page__wrapper js-page-wrapper" animation="turn-on">
      <div class="channels js-page-bg">
        <video class="channel__video --static" muted autoplay playsinline loop>
          <source src="/assets/images/glitch.webm" type="video/webm"/>
          <source src="/assets/images/glitch.mp4" type="video/mp4"/>
        </video>
      </div>

      <div class="page__scroll">
        <div class="page__container">
          {% include 'header.njk' %}

          <div class="page__content">
            {{ content | safe }}
          </div>

          {% include 'footer.njk' %}
        </div>
      </div>
    </div>

    {% if build.isProd %}
      <script async="async" src="https://www.googletagmanager.com/gtag/js?id=UA-75837777-1"></script>
    {% endif %}

    <script>
      {% set dateJS %}
      document
        .querySelector('.js-header-date')
        .innerHTML = new Intl
        .DateTimeFormat('en-US', {
          month: 'short',
          day: 'numeric',
          year: 'numeric'
        })
        .format(new Date()){% endset %}

        {{ dateJS | jsmin | safe  }}
    </script>
    <script async src="/assets/scripts/main.js" type="module"></script>
  </body>
</html>
