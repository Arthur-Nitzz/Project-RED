.tv {
  pointer-events: none;
  position: absolute;
  z-index: var(--layer-channels);
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  overflow: hidden;

  &::before,
  &::after {
    content: '';
    position: absolute;
    z-index: var(--layer-tv-effects);
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* static/noise effect */
  &::before {
    background-image: url(/assets/images/glitch.gif);
    background-size: cover;
    opacity: 0.4;
  }

  /* vignette */
  &::after {
    background: radial-gradient(circle, transparent 60%, black 100%),
      transparent;
  }
}

[animation='turn-on'] .tv::after {
  background: radial-gradient(circle, black 30%, transparent 90%), transparent;
}

.tv__video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;

  &[channel='2'],
  &[channel='8'] {
    object-position: center top;
  }
}

.rec__counter {
  position: absolute;
  bottom: 2rem;
  right: 10%;
  text-shadow: 3px 0 0 var(--glitchy-blue), -3px 0 0 var(--glitchy-red);
}

body:not([using-camera]) {
  & .header__rec,
  & .rec__counter {
    display: none;
  }
}
